<p id="notice"><%= notice %></p>

<h1>Страницы</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Адрес</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @static_pages.each do |static_page| %>
      <tr>
        <td><%= static_page.name %></td>
        <td><%= static_page.slug %></td>
        <td><%= link_to 'К странице', static_page %></td>
        <td><%= link_to 'Редактировать', edit_static_page_path(static_page) %></td>
        <td><%= link_to 'Удалить', static_page, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать страницу', new_static_page_path %>
