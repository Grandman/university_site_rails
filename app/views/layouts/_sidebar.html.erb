<div id="sidebar">
    <div class="region region-sidebar-first">
      <div id="block-user-login" class="block block-user">
        <h2>Вход в аккаунт</h2>
        <div class="content">
        <% if current_user %>
          <div class="menu-block-wrapper menu-block-2 menu-name-user-menu parent-mlid-0 menu-level-1">
            <ul class="menu"><li class="first leaf menu-mlid-2"><%= link_to 'Мой профиль', user_path(current_user) %></a></li>
              <li class="last leaf menu-mlid-15"><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
          </ul></div>
        <% else %>
        <%= form_for(:user, :url => session_path(:user)) do |f| %>
          <div>
            <div class="form-item form-type-textfield form-item-name">
                  <label for="edit-name">Имя пользователя <span class="form-required" title="Обязательно для заполнения.">*</span></label>
                      <%= f.text_field :email %>
                    </div>
                    <div class="form-item form-type-password form-item-pass">
                      <label for="edit-pass">Пароль <span class="form-required" title="Обязательно для заполнения.">*</span></label>
                      <%= f.password_field :password %>
                    </div>
                    <div class="item-list">
              <ul>
                <li class="first"><%= link_to 'Регистрация', new_user_registration_path %></li>
                <li class="last"><%= link_to 'Запросить новый пароль', new_password_path(:user) %></li>
                          </ul>
            </div>
            <input type="hidden" name="form_build_id" value="form-3UPtNi8YULwH2pt4KS9fq1JXP5AqVikNP_4bMMO_NSY" />
                      <div class="form-actions form-wrapper" id="edit-actions">
                    <%= f.submit 'Sign in' %>
            </div>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
